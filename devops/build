#!/bin/bash

image_tag = "latest"

if $1; then
    image_tag = $1
fi

for f in $(find ../ -name 'docker-compose.*'); do
    sed -i -E 's/(image:.*)/\1:$image_tag/' $f
done

docker-compose up -f ../bills/docker-compose.yml -f ../weight/docker-compose.yml -f ./docker-compose.override.yml

docker-compose up

./sanity.py
